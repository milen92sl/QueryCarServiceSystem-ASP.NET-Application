@model IEnumerable<MechanicServiceModel>

@{
    ViewBag.Title = "Всички потребители за администрация";
}

<h1>Таблица за управление на регистрираните потребители/механици:</h1>

<table class="table table-striped">
    <thead class="thead-dark">
		<tr>
			<th scope="col">Ид на механика</th>
			<th scope="col">Три имена</th>
			<th scope="col">Идентификационен код</th>
			<th scope="col">Телефонен номер</th>
			<th scope="col">Бърз достъп за редакция от управител</th>
		</tr>
    </thead>
    <tbody>
        @foreach(var Mechanic in Model)
        {
		<tr>
			<td scope="col">@Mechanic.Id</td>
			<td scope="col">@Mechanic.Name</td>
			<td scope="col">@Mechanic.Code</td>
			<td scope="col">@Mechanic.PhoneNumber</td>

			<td scope="col">
				<a asp-area="" asp-controller="Mechanics" asp-action="Edit" asp-route-id="@Mechanic.Id" class="btn btn-warning ml-3">Редактирай</a>
				<a asp-area="" asp-controller="Mechanics" asp-action="Delete" asp-route-id="@Mechanic.Id" class="btn btn-danger ml-3">Изтрий</a>
			</td>
		</tr>
        }
    </tbody>
</table>
